//Introduces un número y te sale ese mismo número
#include<stdio.h>
int main(){
  printf("Introduce x = ");
  scanf("%d" , &x);
  printf("La variable x = %d, x);
  getchar();
  getchar();
  return 0;
}

//No sale la variable sale la dirección de memoria en la que se encuentra
#include<stdio.h>
int main(){
  int x;
  int a, b; //x=nombre de la variable
  a = 1; //valor de la varialbe
  b = 2;
  printf("Direccion de la variable x = %x", &a); // & para direccion de memoria en RAM
  printf("Direccion de la variable y = %x", &b);
  getchar();
  getchar();
  return 0;
}

DESCRIPTORES
  %d enteros 
  %c letras
  %f decimales
  %X dirección de memoria

#include<stdio.h>
int main{
  int x;
  x = 18;
  printf("%d", x);
  getchar();//para que no se vaya la pantalla y espera
  getchar();
  return 0;
}

//Para saber la dirección
#include<stdio.h>
int main(){
  int x;
  x = 18;
  printf("%x", &x);
  getchar();
  getchar();
  return 0;
}


#include<stdio.h>
int main(){
  int a;
  int *pa;
  a = 2;
  pa=&a; //puntero que apunta a A. El * es para guardar la dirección de A
  printf("a=%d",a);
  printf("\n dirección de la variable a=%x", &a);
  printf("\n pa%x",pa);
  getchar();
  getchar();
  return 0;
}

#include<stdio.h>
int main(){
  char letra;
  letra='i';
  printf("letra=%x", &letra);
  getchar();
  getchar();
}

//VECTORES SI PONGO d ME SALEN TODO NUMEROS SI PONGO x ME SALE LA DIRECCION CON NÚMEROS Y LETRAS
#include<stdio.h>
int main(){
    int lista[3];
    lista [0]=3;
    lista [1]=2;
    lista [2]=1;
    printf("lista[0]=%x", &lista[0]);
    printf("\nlista[1]=%x", &lista[1]);
    printf("\nlista[2]=%x", &lista[2]);
    getchar();
    getchar();
}

#include<stdio.h>
int main(){
    int lista[3];
    lista [0]=3;
    lista [1]=2;
    lista [2]=1;
    printf("lista=%x", &lista[0]);
    //SI PONES EL NOMBRE DELO VECTOR LISTA TE SACA LA POSICIÓN DEL PRIMER ELEMENTO EN ESE VECTOR
    getchar();
    getchar();
}

#include<stdio.h>
int main(){
    int lista[3];
    lista [0]=3;
    lista [1]=2;
    lista [2]=1;
    printf("%d", *lista); //EL * ES PARA METERTE EN LA PRIMERA POSICION DE LA DIRECCIÓN
    getchar();
    getchar();
}

#include<stdio.h>
int main(){
    int lista[3];
    lista [0]=3;
    lista [1]=2;
    lista [2]=1;
    lista [3]=0;
    printf("%d", *(lista+1)); // SEGUN EL NÚMERO QUE PONGAS EN LISTA+X TE PONDRA UNA POSICIÓN U OTRA
    getchar();
    getchar();
}





